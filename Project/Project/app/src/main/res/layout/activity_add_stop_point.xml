<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="375dp"
    android:layout_height="650dp"
    android:background="#fff"
    android:layout_gravity="center"
    android:spinnerMode="dialog">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerInParent="true"
            android:text="Stop Point Infomation"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#F00000">
        </TextView>
<!--        <Button-->
<!--            android:id="@+id/btnclose"-->
<!--            android:layout_width="35dp"-->
<!--            android:layout_height="35dp"-->
<!--            android:text="X"-->
<!--            android:background="@drawable/circleclose"-->
<!--            android:textColor="#fff"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_marginRight="5dp">-->
<!--        </Button>-->
    </RelativeLayout>
        <TextView
            android:id="@+id/tvStopPointName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="monospace"
            android:text="Stop Point Name"
            android:textColor="#959697"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etStopPoint"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="-5sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/et_box"
            android:inputType="textCapWords"
            android:paddingLeft="20sp"
            android:singleLine="true"
            android:textColor="#161616"/>
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="monospace"
        android:text="Address"
        android:textColor="#959697"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="-5sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/et_box"
        android:inputType="textCapWords"
        android:paddingLeft="20sp"
        android:singleLine="true"
        android:textColor="#161616"/>
    <TextView
        android:id="@+id/tvServiceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="monospace"
        android:text="Service Type"
        android:textColor="#959697"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/spinnerServiceType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/et_box"
        android:textColor="#161616"
        android:layout_marginRight="10dp">

    </Spinner>
    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="monospace"
        android:text="City"
        android:textColor="#959697"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/et_box"
        android:textColor="#161616"
        android:layout_marginRight="10dp"
        >

    </Spinner>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">

        <TextView
            android:id="@+id/tvMinCost"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"

            android:layout_marginBottom="10sp"
            android:fontFamily="monospace"
            android:text="Min Cost"
            android:textColor="#959697"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMaxCost"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10sp"
            android:fontFamily="monospace"
            android:text="Max Cost"
            android:textColor="#959697"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/etMinCost"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="50sp"
           android:layout_marginHorizontal="5dp"
            android:background="@drawable/et_box"
            android:paddingLeft="20sp"
            android:singleLine="true"
            android:textColor="#161616"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etMaxCost"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/et_box"
            android:paddingLeft="20sp"
            android:singleLine="true"
            android:textColor="#161616"
            android:inputType="number"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvArrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="monospace"
        android:text="ArriveAt"
        android:textColor="#959697"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">
        <TextView
            android:id="@+id/tvTimeArrive"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/et_boxhcn"
            android:inputType="textCapWords"
            android:textColor="#161616"
            android:singleLine="true"
            android:hint="Time"
            android:textColorHint="#161616"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvDateArrive"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="10sp"
            android:layout_weight="2"
            android:background="@drawable/et_boxhcn"
            android:gravity="center"
            android:hint="Select Date"
            android:inputType="textCapWords"

            android:singleLine="true"
            android:textColorHint="#161616"
            android:textColor="#161616"/>

        <ImageView
            android:id="@+id/IMcalendarArr"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/calendar">

        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="monospace"
        android:text="LeaveAt"
        android:textColor="#959697"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">
        <TextView
            android:id="@+id/tvTimeLeave"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/et_boxhcn"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:hint="Time"
            android:gravity="center"
            android:textColorHint="#161616"
            android:textColor="#161616"/>
        <TextView
            android:id="@+id/tvDateLeave"
            android:layout_weight="2"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_marginLeft="5sp"
            android:hint="Select Date"
            android:layout_marginRight="10sp"
            android:background="@drawable/et_boxhcn"
            android:inputType="textCapWords"

            android:singleLine="true"
            android:gravity="center"
            android:textColor="#161616"
            android:textColorHint="#161616"
            />
        <ImageView
            android:id="@+id/IMcalendarLeave"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/calendar">

        </ImageView>
    </LinearLayout>
    <Button
        android:id="@+id/btnCreateTour"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_sign_in"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Add"
        android:textColor="#fff"
        android:textSize="20dp"
        />
</LinearLayout>
 </ScrollView>
</LinearLayout>



