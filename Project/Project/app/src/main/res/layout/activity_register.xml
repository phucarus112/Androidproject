<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐĂNG KÝ"
                    android:textSize="30sp"
                    android:textColor="#0984e3"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/tvFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="monospace"
                    android:text="FULL NAME"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="-5sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/et_box"
                    android:inputType="textCapWords"
                    android:paddingLeft="20sp"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="monospace"
                        android:text="EMAIL"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="-5sp"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/et_box"
                        android:paddingLeft="20sp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="monospace"
                        android:text="PHONE"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="-5sp"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/et_box"
                        android:inputType="number"
                        android:paddingLeft="20sp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddressDki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="monospace"
                        android:text="ADDRESS"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etAddressDki"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="-5sp"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/et_box"
                        android:paddingLeft="20sp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="monospace"
                        android:text="DATE OF BIRTH"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">
                        <TextView

                            android:id="@+id/tvDobDki"
                            android:layout_width="140dp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="5sp"
                            android:background="@drawable/et_box"
                            android:layout_weight="4"
                            android:singleLine="true"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/imgDobDki"
                            android:layout_width="20dp"
                            android:layout_height="50dp"
                            android:src="@drawable/calendar">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"/>
                        <CheckBox
                            android:id="@+id/cbMaleDki"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </CheckBox>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="40sp"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"/>
                        <CheckBox
                            android:id="@+id/cbFemaleDki"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </CheckBox>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="monospace"
                        android:text="PASSWORD"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="-5sp"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/et_box"
                        android:inputType="textPassword"
                        android:paddingLeft="20sp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvConfirmPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="monospace"
                        android:text="CONFIRM PASSWORD"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="-5sp"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/et_box"
                        android:inputType="textPassword"
                        android:paddingLeft="20sp"
                        android:singleLine="true" />
                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Đăng Ký"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_marginTop="30sp"
                        android:layout_marginBottom="20sp"
                        android:background="@drawable/btn_sign_in"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>