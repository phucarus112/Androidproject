<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginRight="10sp"
    android:background="@drawable/backgroud_item"
    android:orientation="vertical"
    android:paddingBottom="10sp"
    >

    <ImageView
        android:id="@+id/imageChinh"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hinhmacdinh"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="15sp">

        <ImageView
            android:id="@+id/ImageToaDo"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/images" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textColor="#0C4A74"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="15sp">

        <ImageView
            android:id="@+id/ImageLich"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/imageslich" />

        <TextView
            android:id="@+id/tvLich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="15sp">

        <ImageView
            android:id="@+id/ImageNhomNguoi1"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/nguoilon" />

        <TextView
            android:id="@+id/tvNguoi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="15sp">

        <ImageView
            android:id="@+id/ImageNhomNguoi2"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/trenho" />

        <TextView
            android:id="@+id/tvNguoi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="15sp">

        <ImageView
            android:id="@+id/ImageTag1"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/cost" />

        <TextView
            android:id="@+id/tvGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textColor="#FF80AB"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>