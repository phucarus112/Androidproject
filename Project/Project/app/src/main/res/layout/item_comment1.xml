<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20sp">
    <RelativeLayout
        android:layout_marginTop="10sp"
        android:background="@drawable/gradient_background_dialog"
        android:layout_width="wrap_content"
        android:layout_height="80sp">
        <ImageView
            android:id="@+id/imgAvatarComment"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/user"
            android:layout_marginTop="15sp"/>
        <TextView
            android:paddingRight="20sp"
            android:layout_toRightOf="@+id/imgAvatarComment"
            android:layout_marginTop="10sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:id="@+id/tvNameComment"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>
        <RatingBar
            android:layout_marginLeft="60sp"
            android:layout_below="@+id/tvNameComment"
            android:id="@+id/ratingUser"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#FFD740"
            android:stepSize="0.1"
            android:clickable="true"/>
        <TextView
            android:layout_marginTop="30sp"
            android:text=""
            android:layout_toRightOf="@+id/ratingUser"
            android:layout_marginLeft="10sp"
            android:id="@+id/tvTimeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:fontFamily="monospace"/>
        <TextView
            android:layout_marginTop="10sp"
            android:textColor="#000"
            android:fontFamily="monospace"
            android:paddingRight="20sp"
            android:id="@+id/tvContentComment"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:text="Content"
            android:layout_toRightOf="@+id/imgAvatarComment"
            android:layout_below="@+id/ratingUser"/>
    </RelativeLayout>


</LinearLayout>